<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Modern & Vibrant -->
    <style name="Base.Theme.ExpenseTrackerApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (Vibrant Purple) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark</item>
        
        <!-- Secondary colors (Electric Cyan) -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="colorOnSecondaryContainer">@color/secondary_dark</item>
        
        <!-- Tertiary colors (Hot Pink) -->
        <item name="colorTertiary">@color/accent_pink</item>
        <item name="colorTertiaryContainer">#FDF2F8</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar - Transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Window settings -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Modern Typography with Inter/Jakarta Sans -->
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="fontFamily">@font/jakarta_sans</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Material components styling -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FAB</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        
        <!-- Rounded corners everywhere -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.Large</item>
    </style>

    <style name="Theme.ExpenseTrackerApp" parent="Base.Theme.ExpenseTrackerApp" />
    


    <!-- Modern Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- TextInputLayout Style - Modern Rounded -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxStrokeColor">@color/selector_text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>

    <!-- Bottom Navigation Style - Modern Pill Indicator -->
    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/surface</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigation.ActiveIndicator</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="Widget.App.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_light</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
    </style>

    <!-- FAB Style - Gradient Look -->
    <style name="Widget.App.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.FAB</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ShapeAppearance.App.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Modern Shape Appearances -->
    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.App.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.App.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">24dp</item>
    </style>

    <!-- CardView Style - Modern Elevated -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Dialog Style - Modern Rounded -->
    <style name="Theme.App.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Dialog</item>
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>

    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Chip Style - Modern Pills -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    
    <style name="Widget.App.Chip.Choice" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="TextAppearance.App.Chip" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.BottomNavigation.Detail" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/jakarta_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>